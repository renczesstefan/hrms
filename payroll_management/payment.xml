<?xml version="1.0" encoding="UTF-8"?>
<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://modeler.netgrif.com/petriflow_schema.xsd">
	<!-- ROLES -->
	<role>
		<id>accountant</id>
		<title>Účtovník</title>
	</role>
	<!-- DATA -->
	<data type="file">
		<id>csv_file</id>
		<title>Csv súbor</title>
	</data>
	<data type="text">
		<id>email_accountant</id>
		<title>Csv nazov</title>
		<valid>regex("^[a-zA-Z0-9.!#$%&amp;'*+/=?^_`{|}~-]+@[A-Z0-9.-]+\.[A-Z]{2,}$")</valid>
	</data>
    <data type="file">
        <id>csv_file_payment</id>
        <title>Csv súbor s hromadnou platbou</title>
    </data>
	<!-- TRANSITIONS -->
	<transition>
		<id>2</id>
		<x>260</x>
		<y>300</y>
		<label>Nahratie csv súboru</label>
		<assignPolicy>auto</assignPolicy>
		<roleRef>
			<id>accountant</id>
			<logic>
				<perform>true</perform>
			</logic>
		</roleRef>
		<dataGroup>
			<id>101</id>
			<title>Nahratie csv súboru</title>
			<dataRef>
				<id>csv_file</id>
				<logic>
					<behavior>editable</behavior>
                    <behavior>required</behavior>
				</logic>
			</dataRef>
			<dataRef>
				<id>email_accountant</id>
				<logic>
					<behavior>editable</behavior>
                    <behavior>required</behavior>
				</logic>
			</dataRef>
		</dataGroup>
		<event type="finish">
			<id>201</id>
			<actions phase="pre">
				<action>
					csv_file: f.csv_file,
					email_accountant: f.email_accountant;
				</action>
			</actions>
		</event>
	</transition>
	<transition>
		<id>10</id>
		<x>618</x>
		<y>300</y>
		<label>Prijatie emailu od ekonómky / vygenerovanie csv súboru s hromadnou platbou</label>
        <assignPolicy>auto</assignPolicy>
        <roleRef>
            <id>accountant</id>
            <logic>
                <perform>true</perform>
            </logic>
        </roleRef>
        <dataGroup>
            <id>102</id>
            <title>Nahratie csv súboru s hromadnou platbou</title>
            <dataRef>
                <id>csv_file_payment</id>
                <logic>
                    <behavior>editable</behavior>
                    <behavior>required</behavior>
                </logic>
            </dataRef>
        </dataGroup>
        <event type="finish">
            <id>202</id>
            <actions phase="pre">
                <action>
                    csv_file_payment: f.csv_file_payment;
                </action>
            </actions>
        </event>
	</transition>
